<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('./common/head.ejs') %>
	<link href="<%= BASE_URL %>public/admin/assets/vendors/bower_components/datatables/media/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css">
</head>

<body>
	<!-- Preloader -->
	<div class="preloader-it">
		<div class="la-anim-1"></div>
	</div>
	<!-- /Preloader -->
    <div class="wrapper theme-2-active navbar-top-light">
		<!-- Top Menu Items -->
			
			<!-- /Top Menu Items -->
			<%- include('./common/header.ejs') %>
			<!-- Left Sidebar Menu -->
			
			<!-- /Left Sidebar Menu -->
			<%- include('./common/sidebar.ejs') %>
		
        <!-- Main Content -->
		<div class="page-wrapper">
			<div class="container">
				<!-- Row -->
				<div class="row heading-bg">
					<!-- Breadcrumb -->
					<div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
					  <ol class="breadcrumb">
						<li><a href="<%= BASE_URL %>dashboard">Dashboard</a></li>
						<li class="active"><span>Appointment</span></li>
					  </ol>
					</div>
					<!-- /Breadcrumb -->
				</div>
				<!-- /Row -->
				<div class="row">
					<div class="col-md-12">
					<%- include('./common/errors.ejs') %>
						<div class="panel panel-default border-panel card-view">
				<div class="panel-heading">
								
						<h6 class="panel-title txt-dark">Appointment</h6>
						
					<div class="clearfix"></div>
				</div>
				<div class="panel-wrapper collapse in">
					<div class="panel-body">
						<div class="table-wrap">
							<div class="table-responsive">
								<table id="datable_1" class="table table-hover display  pb-30" >
									<thead>
										<tr>
											<th>No</th>
											<th>Doctor Name</th>
											<th>Specialty</th>
											<th>Patient Name</th>
											<th>Appointment Date</th>
											<th>Amount</th>
											<th>Is Cancelled?</th>
											<th>Is Refundable?</th>
											<% /* %><th>Action</th><% */ %>
										</tr>
									</thead>
									<tbody>
										<% var i=1; data.forEach(function(value){ %>
											<tr>
												<td><%= i %></td>
												<td>
													<%= value.doctor_name %>
												</td>
												<td><%= value.specialty %></td>
												<td>
													<a href="<%= BASE_URL+'view_user' %>" target="_blank" class="text-primary">
														<%= value.patient_name %>
													</a>
												</td>
												<td>
													<%= value.appointment_date %>
													<p><span class="text-info"><%= value.appointment_time %>-<%= value.appointment_end_time %></span></p>
												</td>
												<td><%= process.env.SYSTEM_CURRENCY %> <%= value.amount %></td>
												<td>
													<% if (value.appointment_status == 2) { %>
														<span class="badge badge-danger">Yes</span>
													<% }else{ %>
														<span class="badge badge-success">No</span>
													<% } %>
												</td>
												<td>
													<% if (value.is_refund == 1) { %>
														<span class="badge badge-primary">Yes</span>
													<% }else{ %>
														<span class="badge badge-secondary">No</span>
													<% } %>
												</td>
												<% var deleteUrl = BASE_URL+'delete_appointment/'+value.id; %>
												<% /* %><td><a href="<%= deleteUrl %>" class="btn btn-dark" data-placement="top" data-toggle="tooltip" class="tooltips" data-original-title="Edit" ><i class="fa fa-trash"></i></a></td><% */ %>
											</tr>
										<%  i++; }) %>
									</tbody>
								</table>
							</div>
						</div>
					</div>
				</div>
			</div>
				</div>
				</div>
			</div>
			
			<%- include('./common/footer.ejs') %>
			
		</div>
        <!-- /Main Content -->

    </div>
    <!-- /#wrapper -->
	
    <%- include('./common/footerjs.ejs') %>
	<script src="<%= BASE_URL %>public/admin/assets/vendors/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
    <script src="<%= BASE_URL %>public/admin/assets/dist/js/dataTables-data.js"></script>
</body>

</html>
