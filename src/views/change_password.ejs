<div class="wrapper theme-2-active navbar-top-light">
  <!-- Main Content -->
  <div class="page-wrapper">
    <div class="container">
      <!-- Row -->
      <div class="row heading-bg">
        <!-- Breadcrumb -->
        <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
          <ol class="breadcrumb">
            <li><a href="<%= BASE_URL %>dashboard">Dashboard</a></li>
            <li class="active"><span>Change Password</span></li>
          </ol>
        </div>
        <!-- /Breadcrumb -->
      </div>
      <!-- /Row -->
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="panel panel-default border-panel card-view">
            <%- include('./common/errors.ejs') %>
            <div class="panel-heading">
              <div class="pull-left">
                <h6 class="panel-title txt-dark">Change Password</h6>
              </div>
              <div class="clearfix"></div>
            </div>
            <div class="panel-wrapper collapse in">
              <div class="panel-body">
                <div class="row">
                  <div class="col-sm-12 col-xs-12">
                    <div class="form-wrap">
                      <form
                        action="<%= BASE_URL %>update_password"
                        id="myForm"
                        method="post"
                      >
                        <div class="form-group">
                          <label
                            class="control-label mb-10"
                            for="exampleInputuname_1"
                            >Old Password
                            <span class="text-danger">*</span></label
                          >
                          <input
                            type="password"
                            class="form-control"
                            name="opassword"
                            id="opassword"
                            placeholder="Old Password"
                          />
                          <% if(typeof err !== 'undefined'){ %>
                          <div id="error_message" class="text-danger">
                            <%= err.errors.opassword %>
                          </div>
                          <% } %>
                        </div>

                        <div class="form-group">
                          <label
                            class="control-label mb-10"
                            for="exampleInputuname_1"
                            >New Password
                            <span class="text-danger">*</span></label
                          >
                          <input
                            type="password"
                            class="form-control"
                            name="npassword"
                            id="npassword"
                            placeholder="New Password"
                          />
                          <% if(typeof err !== 'undefined'){ %>
                          <div id="error_message" class="text-danger">
                            <%= err.errors.npassword %>
                          </div>
                          <% } %>
                        </div>
                        <div class="form-group">
                          <label
                            class="control-label mb-10"
                            for="exampleInputuname_1"
                            >Confirm Password
                            <span class="text-danger">*</span></label
                          >
                          <input
                            type="password"
                            class="form-control"
                            name="cpassword"
                            id="cpassword"
                            placeholder="Confirm Password"
                          />
                          <% if(typeof err !== 'undefined'){ %>
                          <div id="error_message" class="text-danger">
                            <%= err.errors.cpassword %>
                          </div>
                          <% } %>
                        </div>
                        <button
                          type="submit"
                          class="btn btn-danger mr-10 pull-right"
                        >
                          Submit
                        </button>
                      </form>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <!-- /Main Content -->
</div>
