<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('./common/head.ejs') %>
</head>

<body>
	<!-- Preloader -->
	<div class="preloader-it">
		<div class="la-anim-1"></div>
	</div>
	<!-- /Preloader -->
    <div class="wrapper theme-2-active navbar-top-light">
		<!-- Top Menu Items -->
			
			<!-- /Top Menu Items -->
			<%- include('./common/header.ejs') %>
			<!-- Left Sidebar Menu -->
			
			<!-- /Left Sidebar Menu -->
			<%- include('./common/sidebar.ejs') %>
		
        <!-- Main Content -->
		<div class="page-wrapper">
			<div class="container">
				<!-- Row -->
				<div class="row heading-bg">
					<!-- Breadcrumb -->
					<div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
					  <ol class="breadcrumb">
						<li><a href="<%= BASE_URL %>dashboard">Dashboard</a></li>
						<li class="active"><span>Edit Category</span></li>
					  </ol>
					</div>
					<!-- /Breadcrumb -->
				</div>
				<!-- /Row -->
				<div class="row">
					<div class="col-md-6 col-md-offset-3">
						<div class="panel panel-default border-panel card-view">
							<%- include('./common/errors.ejs') %>
							<div class="panel-heading">
								<div class="pull-left">
									<h6 class="panel-title txt-dark">Edit Category</h6>
								</div>
								<div class="clearfix"></div>
							</div>
							<div class="panel-wrapper collapse in">
							<div class="panel-body">
								<div class="row">
									<div class="col-sm-12 col-xs-12">
										<div class="form-wrap">
											 
									<form action="<%= BASE_URL %>do_edit_blog_category" id="myForm" method="post">
									<input type="hidden" name="id" value="<%= data[0].id %>" />
											<div class="form-group">
												<label class="control-label mb-10" for="exampleInputuname_1">Name <span class="text-danger">*</span></label>
												<input type="text" class="form-control" name="name" id="name" value="<%= data[0].name %>">
												<% if(typeof err !== 'undefined'){ %>
												<div id="error_message" class="text-danger"><%= err.errors.name %></div>
												<% } %>
													
											</div>
												<button type="submit" class="btn btn-danger mr-10 pull-right">Submit</button>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
							
							
				</div>
				</div>
				</div>
			</div>
			
			<%- include('./common/footer.ejs') %>
			
		</div>
        <!-- /Main Content -->

    </div>
    <!-- /#wrapper -->
	
    <%- include('./common/footerjs.ejs') %>
	
</body>

</html>
