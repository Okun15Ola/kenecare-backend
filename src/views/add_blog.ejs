<!DOCTYPE html>
<html lang="en">
<head>
	<%- include('./common/head.ejs') %>
	<link rel="stylesheet" href="<%= BASE_URL %>public/admin/assets/vendors/bower_components/summernote/dist/summernote.css" />
	<link href="<%= BASE_URL %>public/admin/assets/dist/css/bootstrap-tagsinput.css" rel="stylesheet" type="text/css">
</head>

<body>
	<!-- Preloader -->
	<div class="preloader-it">
		<div class="la-anim-1"></div>
	</div>
	<!-- /Preloader -->
    <div class="wrapper theme-2-active navbar-top-light">
		<!-- Top Menu Items -->
			
			<!-- /Top Menu Items -->
			<%- include('./common/header.ejs') %>
			<!-- Left Sidebar Menu -->
			
			<!-- /Left Sidebar Menu -->
			<%- include('./common/sidebar.ejs') %>
		
        <!-- Main Content -->
		<div class="page-wrapper">
			<div class="container">
				<!-- Row -->
				<div class="row heading-bg">
					<!-- Breadcrumb -->
					<div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
					  <ol class="breadcrumb">
						<li><a href="<%= BASE_URL %>dashboard">Dashboard</a></li>
						<li class="active"><span>Add Blog</span></li>
					  </ol>
					</div>
					<!-- /Breadcrumb -->
				</div>
				<!-- /Row -->
				<div class="row">
					<div class="col-md-6 col-md-offset-3">
						<div class="panel panel-default border-panel card-view">
							<%- include('./common/errors.ejs') %>
							<div class="panel-heading">
								<div class="pull-left">
									<h6 class="panel-title txt-dark">Add Blog</h6>
								</div>
								<div class="clearfix"></div>
							</div>
							<div class="panel-wrapper collapse in">
							<div class="panel-body">
								<div class="row">
									<div class="col-sm-12 col-xs-12">
										<div class="form-wrap">
											 
									<form action="<%= BASE_URL %>do_add_blog" id="myForm" method="post" enctype="multipart/form-data">
											<div class="form-group">
												<label class="control-label mb-10" for="exampleInputuname_1">Category <span class="text-danger">*</span></label>
												<select name="category_id" id="category_id" class="form-control">
													<option value="">Select Category</option>
													<% category.forEach(function(value){ %>
														<option value="<%= value.id %>" <% if(typeof category_id !== 'undefined'){ if(category_id==value.id){ %> selected <%}  } %> ><%= value.name %></option>
													<%  }) %>
												</select>
												<% if(typeof err !== 'undefined'){ %>
												<div id="error_message" class="text-danger"><%= err.errors.category_id %></div>
												<% } %>
													
											</div>
											<div class="form-group">
												<label class="control-label mb-10" for="exampleInputuname_1">Name <span class="text-danger">*</span></label>
												<input type="text" class="form-control" name="name" id="name" value="<% if(typeof name !== 'undefined'){ %><%= name %><% } %>">
												<% if(typeof err !== 'undefined'){ %>
												<div id="error_message" class="text-danger"><%= err.errors.name %></div>
												<% } %>
													
											</div>
											<div class="form-group">
												<label class="control-label mb-10" for="exampleInputuname_1">Tags <span class="text-danger">*</span></label>
												<input type="text" class="form-control" name="tags" id="tags" value="<% if(typeof tags !== 'undefined'){ %><%= tags %><% } %>">
												<% if(typeof err !== 'undefined'){ %>
												<div id="error_message" class="text-danger"><%= err.errors.tags %></div>
												<% } %>
													
											</div>
											<div class="form-group">
												<label class="control-label mb-10" for="exampleInputuname_1">Description <span class="text-danger">*</span></label>
												
												<textarea name="description" id="description" class="form-control summernote"><% if(typeof name !== 'undefined'){ %><%= description %><% } %></textarea>
												<% if(typeof err !== 'undefined'){ %>
												<div id="error_message" class="text-danger"><%= err.errors.description %></div>
												<% } %>
											</div>
											<div class="form-group">
												<label class="control-label mb-10" for="exampleInputuname_1">Image <span class="text-danger">*</span></label>
												<div class="row">
													<div class="col-md-6 col-xs-12">
														<input type="file" class="form-control" name="image" id="image" title="Browse file"/>
														<% if(typeof imageval !== 'undefined'){ %>
														<div id="error_message" class="text-danger"><%= imageval %></div>
														<% } %>
													</div>
													<div class="col-md-2 col-xs-12">  
														
												   </div>
												</div>
											</div>
												<button type="submit" class="btn btn-danger mr-10 pull-right">Submit</button>
											</form>
										</div>
									</div>
								</div>
							</div>
						</div>
							
							
				</div>
				</div>
				</div>
			</div>
			
			<%- include('./common/footer.ejs') %>
			
		</div>
        <!-- /Main Content -->

    </div>
    <!-- /#wrapper -->
	
    <%- include('./common/footerjs.ejs') %>
	<script src="<%= BASE_URL %>public/admin/assets/vendors/bower_components/summernote/dist/summernote.min.js"></script>
	<script type="text/javascript">
	$(function() {
		"use strict";
		$('.summernote').summernote({
			height: 200,
		});
	});
	</script>
	<script src="<%= BASE_URL %>public/admin/assets/dist/js/bootstrap-tagsinput.min.js"></script>
	<script type="text/javascript">
	$('#tags').tagsinput();
</script>
</body>

</html>
