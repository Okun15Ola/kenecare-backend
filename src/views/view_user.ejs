<!DOCTYPE html>
<html lang="en">
<head>
  <%- include('./common/head.ejs') %>
  <link href="<%= BASE_URL %>public/admin/assets/vendors/bower_components/datatables/media/css/jquery.dataTables.min.css" rel="stylesheet" type="text/css">
</head>
<body>
  <!-- Preloader -->
  <div class="preloader-it">
    <div class="la-anim-1"></div>
  </div>
  <!-- /Preloader -->
  <div class="wrapper theme-2-active navbar-top-light">
    <!-- Top Menu Items -->
    <!-- /Top Menu Items -->
    <%- include('./common/header.ejs') %>
    <!-- Left Sidebar Menu -->
    <!-- /Left Sidebar Menu -->
    <%- include('./common/sidebar.ejs') %>
    <!-- Main Content -->
    <div class="page-wrapper">
      <div class="container">
        <!-- Row -->
        <div class="row heading-bg">
          <!-- Breadcrumb -->
          <div class="col-lg-12 col-sm-12 col-md-12 col-xs-12">
            <ol class="breadcrumb">
              <li><a href="<%= BASE_URL %>dashboard">Dashboard</a></li>
              <li class="active"><span>Patients</span></li>
            </ol>
          </div>
          <!-- /Breadcrumb -->
        </div>
        <!-- /Row -->
        <div class="row">
          <div class="col-md-12">
            <%- include('./common/errors.ejs') %>
            <div class="panel panel-default border-panel card-view">
              <div class="panel-heading">
                <h6 class="panel-title txt-dark">Patients</h6>
                <div class="clearfix"></div>
              </div>
              <div class="panel-wrapper collapse in">
                <div class="panel-body">
                  <div class="table-wrap">
                    <div class="table-responsive">
                      <table id="datable_1" class="table table-hover display  pb-30">
                        <thead>
                          <tr>
                            <th>No</th>
                            <th>Name</th>
                            <th>Mobile No</th>
                            <th>Bank Details</th>
                            <th>Action</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% var i=1; data.forEach(function(value){ %>
                          <tr>
                            <td>
                              <%= i %>
                            </td>
                            <td>
                              <%= value.name %>
                            </td>
                            <td>
                              <%= value.mobile_no %>
                            </td>
                            <td>
								<a href="javascript:;" class="btn btn-primary viewBankDetails" data-placement="top" data-toggle="tooltip" class="tooltips" data-original-title="View Bank Details" data-id="<%= value.id %>"><i class="fa fa-eye"></i> View</a>
                            </td>
                            <% var deleteUrl=BASE_URL+'delete_user/'+value.id; %>
                            <td><a href="<%= deleteUrl %>" class="btn btn-danger" data-placement="top" data-toggle="tooltip" class="tooltips" data-original-title="Delete" onclick="return confirm('Are you sure you want to delete?');"><i class="fa fa-trash"></i></a>
                            </td>
                          </tr>
                          <% i++; }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <%- include('./common/footer.ejs') %>
    </div>
    <!-- /Main Content -->
  </div>
  <!-- /#wrapper -->
  <%- include('./common/footerjs.ejs') %>
  <script src="<%= BASE_URL %>public/admin/assets/vendors/bower_components/datatables/media/js/jquery.dataTables.min.js"></script>
  <script src="<%= BASE_URL %>public/admin/assets/dist/js/dataTables-data.js"></script>
  <script>
	$(document).on('click', '.viewBankDetails', function() {
		var id = $(this).attr('data-id');
		jQuery.ajax({
			type: "POST",
			url: "/getUserBankDetails",
			data: {
				"user_id": id
			},
			dataType: 'json',
			success: function(response) {
				var commonMdlHtml = '';
				if (response.status === 0) {
					commonMdlHtml += '<div class="row mt-3" style="line-height: 2;"><div class="col-md-12 text-center">No data found</div>';
				} else {
					var bankDetails = response.data[0];
					commonMdlHtml += '<div class="modal-body">';
						commonMdlHtml += '<div class="row mt-3" style="line-height: 2;">';
							commonMdlHtml += '<div class="form-group"><label class="col-md-4"><strong>Account Holder Name: </strong></label> <span class="col-md-8">'+bankDetails.account_holder_name+'</span></div>';
							commonMdlHtml += '<div class="form-group"><label class="col-md-4"><strong>Email: </strong></label> <span class="col-md-8">'+bankDetails.email+'</span></div>';
							commonMdlHtml += '<div class="form-group"><label class="col-md-4"><strong>Bank Name: </strong></label> <span class="col-md-8">'+bankDetails.bank_name+'</span></div>';
							commonMdlHtml += '<div class="form-group"><label class="col-md-4"><strong>Account Number: </strong></label> <span class="col-md-8">'+bankDetails.account_number+'</span></div>';
							commonMdlHtml += '<div class="form-group"><label class="col-md-4"><strong>Swift Code: </strong></label> <span class="col-md-8">'+bankDetails.swift_code+'</span></div>';
							commonMdlHtml += '<div class="form-group"><label class="col-md-4"><strong>Branch: </strong></label> <span class="col-md-8">'+bankDetails.branch+'</span></div>';
						commonMdlHtml += '</div>';
					commonMdlHtml += '</div>';
				}
				$('#commonMdlTitle').html('View Bank Details');
				$('#commonMdlBody').html(commonMdlHtml);
				$('#commonModal').modal('show');
				// $('.modal-dialog').width('80%');
			}
		});
	});
  </script>
</body>
</html>